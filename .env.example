# ---------- Frontend (Vite) ----------
VITE_API_URL=http://localhost:8000

# ---------- Django core ----------
DJANGO_SECRET_KEY=your_django_secret_key
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# ---------- Email (SMTP) ----------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_app_password
DEFAULT_FROM_EMAIL=Your Name <your_email@example.com>
EMAIL_TIMEOUT=20

# ---------- Frontend origin used by Django (CSRF/CORS) ----------
# IMPORTANT: use your ngrok origin here (NO trailing slash)
FRONTEND_URL=http://localhost:5173

# ---------- Password reset ----------
PASSWORD_RESET_TIMEOUT=3600

# ---------- MySQL Database (needed by db container and Django settings) ----------
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_NAME=techshop
MYSQL_USER=techshop_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_HOST=db
MYSQL_PORT=3306
